<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.paint.*?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafxcalculator.controller.MainController"
      style="-fx-background-color: linear-gradient(to bottom, #fff9fb, #fff0f5);">
    <padding>
        <Insets bottom="30" left="30" right="30" top="30"/>
    </padding>

    <Text text="Главное меню" style="-fx-font-size: 28; -fx-font-weight: bold; -fx-fill: #d14d82;">
        <font>
            <Font name="System Bold" size="28"/>
        </font>
    </Text>

    <Button text="Калькулятор закона Ома" onAction="#openOhmLawCalculator"
            style="-fx-font-size: 14; -fx-min-width: 250; -fx-min-height: 45;
                   -fx-background-color: #ffffff, #ffebf1; -fx-background-insets: 0, 1;
                   -fx-background-radius: 5; -fx-border-radius: 5;
                   -fx-effect: dropshadow(gaussian, rgba(209,77,130,0.2), 5, 0.2, 0, 1);
                   -fx-text-fill: #d14d82; -fx-font-weight: bold;"/>

    <Button text="Конвертер валют" onAction="#openCurrencyConverter"
            style="-fx-font-size: 14; -fx-min-width: 250; -fx-min-height: 45;
                   -fx-background-color: #ffffff, #ffebf1; -fx-background-insets: 0, 1;
                   -fx-background-radius: 5; -fx-border-radius: 5;
                   -fx-effect: dropshadow(gaussian, rgba(209,77,130,0.2), 5, 0.2, 0, 1);
                   -fx-text-fill: #d14d82; -fx-font-weight: bold;"/>

    <Button fx:id="adminButton" text="Управление пользователями" onAction="#openAdminPanel" visible="false"
            style="-fx-font-size: 14; -fx-min-width: 250; -fx-min-height: 45;
                   -fx-background-color: #ffffff, #ffebf1; -fx-background-insets: 0, 1;
                   -fx-background-radius: 5; -fx-border-radius: 5;
                   -fx-effect: dropshadow(gaussian, rgba(209,77,130,0.2), 5, 0.2, 0, 1);
                   -fx-text-fill: #d14d82; -fx-font-weight: bold;"/>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Выход" onAction="#logout"
                style="-fx-font-size: 12; -fx-text-fill: #d14d82;
                       -fx-background-color: transparent; -fx-underline: true;
                       -fx-padding: 5 10 5 10; -fx-cursor: hand;"/>
    </HBox>
</VBox>